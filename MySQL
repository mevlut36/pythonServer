# main(['install','mysql-connector-python-rf'])
import mysql.connector


class DB:
    def __init__(self, host, user, password, db):
        self.host = host
        self.user = user
        self.password = password
        self.db = db

    def conn(self, host, user, password):
        return mysql.connector.connect(host=f"{host}", user=f"{user}", password=f"{password}")

    def createDB(self, name):
        db = self.conn(self.host, self.user, self.password).cursor()
        db.execute("CREATE DATABASE {name}")

    def checkAllDB(self):
        db = self.conn(self.host, self.user, self.password).cursor()
        db.execute("SHOW DATABASES")
        for x in db:
            return x

    def checkTable(self, name):
        db = self.conn(self.host, self.user, self.password).cursor()
        db.execute("SHOW TABLES")
        for x in db:
            return x

    def createTable(self, name):
        db = self.conn(self.host, self.user, self.password).cursor()
        db.execute("CREATE TABLE {0} (name VARCHAR(255), address VARCHAR(255))".format(name))
